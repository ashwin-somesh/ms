from flask import Flask, jsonify

app = Flask(__name__)

@app.route('/products')
def get_products():
    items = [
        {"id":1, "name":"Laptop"},
        {"id":2, "name":"Mobile"}
    ]
    return jsonify(items)

@app.route('/')
def home():
    return "Product Service Running"

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=8081)
