from flask import Flask, jsonify

app = Flask(__name__)

@app.route('/orders')
def get_orders():
    data = [
        {"order_id":100, "item_id":1},
        {"order_id":101, "item_id":2}
    ]
    return jsonify(data)

@app.route('/')
def home():
    return "Order Service Running"

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=8082)
